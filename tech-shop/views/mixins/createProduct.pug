mixin createProduct(product)
      .col
        .card.shadow-sm
          img(src=`/img/${product.image}`)
          .card-body
            p.card-text #{product.name}                    
            .d-flex.justify-content-between.align-items-center
              .btn-group
                button.btn.btn-sm.btn-outline-secondary(type='button') View
                button.btn.btn-sm.btn-outline-secondary(type='button') Buy
              small.text-body-secondary 9 mins